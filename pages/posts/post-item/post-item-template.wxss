.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-bottom: 2px solid #ededed;
  border-top: 2px solid #ededed;
  padding-bottom: 5px;
}

.post-author-date {
  /*margin-top: 10rpx;
margin-bottom: 20rpx;
margin-left: 10rpx;*/
  margin: 10rpx 0 20rpx 10rpx;
  font-size: 25rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}

.post-title {
  font-size: 100rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

.post-image {
  width: 100%;
  height: 400rpx;
}

.post-content {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.post-like {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 1px;
}

.post-like-font {
  margin-left: 10rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 30rpx;
}
