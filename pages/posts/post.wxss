swiper {
  width: 100%;
  height: 422rpx;
}
swiper image{
  width:100%;
  height:422rpx;
}
.post-auther-icon {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date-text {
  margin-left: 20rpx;
  margin-bottom: 20px;
  font-size: 26rpx;
  vertical-align: middle;
}
.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5rpx;
}
.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}
.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color:  #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.post-image {
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-comment {
  font-size: 13rpx;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post-comment-image {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-comment-text {
  font-size: 24rpx;
  margin-right: 20px;
  vertical-align: middle;
}