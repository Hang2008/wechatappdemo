@import "../star/star-template.wxss";

.detail-container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20rpx);
  filter: blur(20rpx);
}

/*绝对定位用top和left等属性控制margin*/

.head-img-hover {
  width: 100%;
  height: 320rpx;
  display: flex;
  top: 65rpx;
  left: 40rpx;
  flex-direction: column;
  position: absolute;
}

.like {
  margin-top: 30rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
}

.highlight-font {
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}

.plain-font {
  color: #666;
  font-size: 22rpx;
  margin-right: 30rpx;
}

.main-title {
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  margin-left: 20rpx;
  letter-spacing: 2px;
}

.sub-title {
  font-size: 28rpx;
  color: #fff;
  margin-left: 20rpx;
  margin-top: 30rpx;
}

.movie-img {
  width: 175rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}

.summary {
  margin-left: 40rpx;
  margin-top: 40rpx;
  color: #777;
}

.original-title {
  color: #1f3463;
  font-size: 24rpx;
  font-weight: bold;
}

.flex-row {
  display: flex;
  flex-direction: row;
  font-size: 25rpx;
  margin-top: 10rpx;
}

.mark {
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999;
}

.hr {
  margin-top: 45rpx;
  height: 1px;
  width: 100%;
  background-color: #d9d9d9;
}

.subtitle-font {
  color: #999;
}

.synopsis-view {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
}

.summary-content {
  margin-top: 20rpx;
  margin-right: 40rpx;
  line-height: 40rpx;
  letter-spacing: 1px;
  font-size: 30rpx;
  font-family: 'Lucida Sans';
}

.casts-view {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
}

.cast-scroll-view {
  white-space: nowrap;
}

.cast-container {
  display: inline-flex;
  flex-direction: column;
  width: 170rpx;
  height: 300rpx;
  margin-right: 10rpx;
  text-align: center;
  white-space: normal;
}

.cast-img {
  width: 100%;
}

.cast-img {
  width: 100%;
  height: 210rpx;
}

.cast-name {
  margin: 10rpx auto 0;
  font-size: 20rpx;
}
